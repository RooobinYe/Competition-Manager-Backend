<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.demo.spring_demo.mapper.AcademyMapper">
    <select id="findByAcademyId" resultType="com.demo.spring_demo.model.Team">
        SELECT * FROM team
        <where>
            <if test="academyId != null">
                academy_id = #{academyId}
            </if>
        </where>
    </select>
</mapper> 