<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.demo.spring_demo.mapper.MemberMapper">
    <!-- 根据ID查询成员 -->
    <select id="findById" resultType="com.demo.spring_demo.model.Member">
        SELECT * FROM members WHERE id = #{id}
    </select>

    <!-- 查询所有成员 -->
    <select id="findAll" resultType="com.demo.spring_demo.model.Member">
        SELECT * FROM members
    </select>

    <!-- 根据团队ID查询成员 -->
    <select id="findByTeamId" resultType="com.demo.spring_demo.model.Member">
        SELECT * FROM members WHERE team_id = #{teamId}
    </select>

    <!-- 插入新成员 -->
    <insert id="insert" parameterType="com.demo.spring_demo.model.Member" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO members (name, email, team_id)
        VALUES (#{name}, #{email}, #{teamId})
    </insert>

    <!-- 更新成员信息 -->
    <update id="update" parameterType="com.demo.spring_demo.model.Member">
        UPDATE members SET
            name = #{name},
            email = #{email},
            team_id = #{teamId}
        WHERE id = #{id}
    </update>

    <!-- 删除成员 -->
    <delete id="deleteById">
        DELETE FROM members WHERE id = #{id}
    </delete>

    <!-- 根据团队ID删除成员 -->
    <delete id="deleteByTeamId">
        DELETE FROM members WHERE team_id = #{teamId}
    </delete>

    <!-- 批量插入成员 -->
    <insert id="batchInsert" parameterType="java.util.List">
        INSERT INTO members (name, email, team_id) VALUES
        <foreach collection="list" item="member" separator=",">
            (#{member.name}, #{member.email}, #{member.teamId})
        </foreach>
    </insert>

    <!-- 检查邮箱是否已存在于同一团队 -->
    <select id="checkEmailExistsInTeam" resultType="java.lang.Integer">
        SELECT COUNT(*) FROM members 
        WHERE team_id = #{teamId} AND email = #{email}
        <if test="id != null">
            AND id != #{id}
        </if>
    </select>
</mapper> 